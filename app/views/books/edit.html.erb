<% if @book.errors.any? %>
  error!:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>

<div class="links">
  <p class="link_edit"><%= link_to "Show", book_path(@book.id) %></p>
  <p class="link_devide">|</p>
  <p class="link_back"><%= link_to "back", "/books" %></p>
</div>